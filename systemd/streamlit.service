[Unit]
Description=Streamlit Application
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/divvy_tax/divvy_tax
ExecStart=/home/ubuntu/divvy_tax/divvy_tax/venv/bin/streamlit run app.py --server.address=0.0.0.0 --server.port=8501
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
